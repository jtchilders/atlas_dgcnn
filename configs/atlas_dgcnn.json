{
   "model": {
      "name":                          "dgcnn",
      "knn":                           20
   },
   "optimizer": {
      "name":                          "Adam",
      "learning_rate":                 0.001
   },
   "lr_schedule": {
      "name":                          "ExponentialDecay",
      "args": {
         "initial_learning_rate":      0.001,
         "decay_steps":                2500,
         "decay_rate":                 0.5,
         "staircase":                  false
      }
   },
   "loss": {
      "name":                          "SparseCategoricalCrossentropy",
      "args": {
         "from_logits":                true
      }
   },
   "accuracy": {
      "name":                          "simple_class_accuracy"
   },
   "data": {
      "handler":                       "atlas_pointcloud_csv",
      "train_filelist":                "train.txt",
      "test_filelist":                 "val.txt",
      "batch_size":                    4,
      "shuffle_buffer":                10000,
      "reshuffle_each_iteration":      true,
      "num_parallel_readers":          8,
      "prefectch_buffer_size":         10,
      "num_features":                  7,
      "num_classes":                   3,
      "num_channels":                  3,
      "num_points":                    15000
   },
   "training": {
      "epochs":                        5,
      "status":                        2
   },
   "validation": {
      "batches":                       16
   }
}
