{
   "model": {
      "name":                          "dgcnn",
      "knn":                           20,
      "conv2d_size":                   64,
      "dropout":                       0.3,
      "use_kernel_reg":                true,
      "kernel_reg":                    1e-3
   },
   "optimizer": {
      "name":                          "Adam",
      "args": {
         "beta_1":                     0.9,
         "beta_2":                     0.999,
         "epsilon":                    1e-06
      }
   },
   "lr_schedule": {
      "args": {
         "decay_rate":                 0.5,
         "decay_steps":                15000,
         "initial_learning_rate":      0.001,
         "staircase":                  true
      },
      "name": "ExponentialDecay"
   },
   "loss": {
      "name":                          "SparseCategoricalCrossentropy",
      "args": {
         "from_logits":                true,
         "reduction":                  "none"
      }
   },
   "accuracy": {
      "name":                          "simple_class_accuracy"
   },
   "data": {
      "handler":                       "atlas_pointcloud_csv",
      "train_filelist":                "/lus/theta-fs0/projects/atlasMLbjets/parton/csv_data/zej_train.txt",
      "test_filelist":                 "/lus/theta-fs0/projects/atlasMLbjets/parton/csv_data/zej_test.txt",
      "batch_size":                    4,
      "shuffle_buffer":                30000,
      "reshuffle_each_iteration":      true,
      "num_parallel_readers":          8,
      "prefectch_buffer_size":         10,
      "num_features":                  7,
      "num_classes":                   3,
      "num_channels":                  3,
      "num_points":                    15000,
      "augment":                       true
   },
   "training": {
      "epochs":                        200,
      "status":                        10
   },
   "validation": {
      "batches":                       16
   }
}
